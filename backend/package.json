  "devDependencies": {
    "@types/bun": "^1.3.8",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "ioredis": "^5.9.2",
    "postgres": "^3.4.8",
    "viem": "^2.45.1"
  }
}
